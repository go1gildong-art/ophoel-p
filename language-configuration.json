{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["(", ")"],
        ["\"", "\""],
        ["${", "}"],
        ["`", "`"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{\\s*$",
        "decreaseIndentPattern": "^\\s*\\}.*$"
    }
}